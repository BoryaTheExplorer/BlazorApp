@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount" @onmouseover="ResetCounter">Click me</button>

@code {
    private int currentCount = 0;

    private void ResetCounter() => currentCount = 0;
    private void IncrementCount()
    {
        currentCount++;
    }
}
